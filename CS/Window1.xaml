<Window x:Class="ShowGridMenu.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" Title="Window1" Height="300" Width="500">
	<dxg:GridControl x:Name="grid">
		<dxg:GridControl.Columns>
			<dxg:GridColumn FieldName="Text" />
			<dxg:GridColumn FieldName="Number" />
			<dxg:GridColumn FieldName="Group" />
		</dxg:GridControl.Columns>
		<!--region #ShowGridMenu-->
		<dxg:GridControl.View>
			<dxg:TableView ShowGridMenu="TableView_ShowGridMenu" />
		</dxg:GridControl.View>
		<!--endregion #ShowGridMenu-->
	</dxg:GridControl>
</Window>
